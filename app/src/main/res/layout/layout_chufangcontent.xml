<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <!-- 详情栏title-->
    <LinearLayout
        android:id="@+id/action_five"
        android:layout_below="@+id/line_five"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/mlist_name"
            android:layout_weight="40.9"
            android:layout_width="0dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="名称"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/mlist_style"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="类型"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/mlist_num"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="次数"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>
        <TextView
            android:id="@+id/mlist_numcode"
            android:layout_weight="20"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="使用次数"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>

        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>
        <LinearLayout
            android:layout_weight="18.4"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/play"/>
            <TextView
                android:id="@+id/mlist_paly"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="#e85e12"
                android:text="播放"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#cccccc"/>
    </LinearLayout>
</LinearLayout>
